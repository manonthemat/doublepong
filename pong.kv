#:kivy 1.7

<PongGame>:
    ball: pong_ball
    player1: player_left_up
    player2: player_right_up
    player3: player_left_down
    player4: player_right_down

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 80
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 80
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left_up
        x: root.x
        center_y: root.y + self.height

    PongPaddle
        id: player_right_up
        x: root.width - self.height
        center_y: root.y + self.height

    PongPaddle:
        id: player_left_down
        x: root.x
        center_y: root.height - self.height

    PongPaddle:
        id: player_right_down
        x: root.width - self.height
        center_y: root.height - self.height

<PongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 25, 100
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

